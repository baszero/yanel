<?xml version="1.0" encoding="UTF-8"?>

<configuration>
  <appenders>
    <File name="A1" fileName="@LOG4J_DIR@/log4j2-cnode@CNODE_ID@.log" append="false">
<!--
    <File name="A1" fileName="${catalina.base}/logs/log4j2-cnode@CNODE_ID@.log" append="false">
-->
      <PatternLayout pattern="%-4r %d{yyyy-MM-dd HH:mm:ss,SSS Z} [%t] %-5p %c.%M():%L %x - %m%n"/>
<!--
      <PatternLayout pattern="%t %-5p %c{2} - %m%n"/>
-->
    </File>
    <Console name="STDOUT" target="SYSTEM_OUT">
      <PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n"/>
    </Console>
  </appenders>

  <loggers>
    <logger name="org.apache.log4j.xml" level="debug">
      <appender-ref ref="A1"/>
    </logger>

    <root level="warn">
      <appender-ref ref="A1"/>
<!--
      <appender-ref ref="STDOUT"/>
-->
    </root>
  </loggers>
</configuration>
