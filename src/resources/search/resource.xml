<?xml version="1.0"?>

<resource xmlns="http://www.wyona.org/yanel/1.0"
  name="search"
  namespace="http://www.wyona.org/yanel/resource/1.0"
  class="org.wyona.yanel.impl.resources.search.SearchResource"
  >
<description>
Search a local repository, but also allow searching with third-party search engines
</description>

<rtd>
  <!-- OPTIONAL: If this is property is set, then the corresponding property is searched instead fulltext -->
  <property name="property-name"/>

  <!-- OPTIONAL: Pagination parameters -->
  <property name="max-entries-per-page" default="3"/>
  <property name="max-navigation-links" default="1"/>

  <!-- OPTIONAL: When set to true, then also the revisions of a node are included in the result set -->
  <property name="include-revisions" default="true"/>
</rtd>
</resource>
